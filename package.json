{
  "name": "showcall",
  "version": "1.2.2",
  "description": "Professional remote controller for Resolume Arena using OSC + REST API",
  "author": "Trevor Marr <trevormarrr@users.noreply.github.com>",
  "license": "MIT",
  "homepage": "https://github.com/trevormarrr/showcall#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/trevormarrr/showcall.git"
  },
  "bugs": {
    "url": "https://github.com/trevormarrr/showcall/issues"
  },
  "keywords": [
    "resolume",
    "osc",
    "vj",
    "controller",
    "live-production",
    "electron",
    "video-control"
  ],
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "electron .",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.trevormarrr.showcall",
    "productName": "ShowCall",
    "files": [
      "server.mjs",
      "public/**/*",
      "electron/**/*",
      ".env.example",
      "package.json",
      "node_modules/**/*"
    ],
    "asarUnpack": [
      "server.mjs",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.video",
      "icon": "build/showcall_icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/showcall_icon_256x256.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Video",
      "icon": "build/showcall_icon.png"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "title": "ShowCall ${version}",
      "icon": "build/showcall_icon.icns"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "trevormarrr",
        "repo": "showcall"
      }
    ]
  },
  "dependencies": {
    "axios": "^1.6.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "osc": "^2.4.5",
    "wait-on": "^7.2.0",
    "electron-updater": "^6.3.9"
  },
  "devDependencies": {
    "@electron/notarize": "^2.5.0",
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3"
  }
}
